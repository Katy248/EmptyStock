@model EmptyStock.Domain.Models.Stock.Shipment

@{
    ViewData["Title"] = "Создание";
}

<h1>Создание</h1>

<h4>Отгрузка</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="CreatorId" hidden/>
            <div class="form-group">
                <label asp-for="RequestId" class="control-label">Идентификатор поставки</label>
                <select asp-for="RequestId" class ="form-control" asp-items="ViewBag.RequestId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label">Идентификатор продукта</label>
                <select asp-for="ProductId" class ="form-control" asp-items="ViewBag.ProductId"></select>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
