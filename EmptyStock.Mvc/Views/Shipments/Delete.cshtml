@model EmptyStock.Domain.Models.Stock.Shipment

@{
    ViewData["Title"] = "Удаление";
}

<h1>Удаление</h1>

<h3>Вы уверены что хотите удалить это?</h3>
<div>
    <h4>Отгрузка</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Заказ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Request.Id)
        </dd>
        <dt class = "col-sm-2">
            Количество
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ChangeAmount)
        </dd>
        <dt class = "col-sm-2">
           Продукт
        </dt>
        @*<dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>*@
        <dt class = "col-sm-2">
            Создатель
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Creator.FirstName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
</div>
