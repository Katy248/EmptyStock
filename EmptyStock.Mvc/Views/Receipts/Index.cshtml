@model IEnumerable<EmptyStock.Domain.Models.Stock.Receipt>

@{
    ViewData["Title"] = "Поставки";
}

<h1>Поставки</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Продукт
            </th>
            <th>
                Количество
            </th>
            <th>
                Стоимость
            </th>
            <th>
               Создатель
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                    @item.Product.Name
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @(item.Product.Price * item.ChangeAmount)
            </td>
            
            <td>
                @item.Creator.ShortName
            </td>
            <td>
                <a class="link-danger" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
